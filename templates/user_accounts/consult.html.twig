{% extends '/dashboard/index.html.twig' %}

{% block wrapper %}
  <link href="../css/consult.css" rel="stylesheet"/>
  <style>
    .im {
      width: 100%;
    }
  </style>
  <div class="e">
    <div class="card">
      <center><img src="../img/{{user.sexe}}.png" alt="Avatar" style="width:20%;margin-left:5%">
      </center>
      <div class="container"></br>
      <center>
        <table>
          <tr>
            <td>Statut</td>
            <td style="color:red;">Non Verifié</td>
          </tr>
          <tr>
            <td>Nom Prenom:</td>
            <td>{{user.nom}}
              {{user.prenom}}</td>
          </tr>
          <tr>
            <td>CIN</td>
            <td>
              {{user.id}}</td>
          </tr>
          <tr>
            <td>Email:</td>
            <td>
              {{user.email}}</td>
          </tr>
          <tr>
            <td>Date De Naissance:
            </td>
            <td>{{dn}}
            </td>
          </tr>
          <tr>
            <td>Pays</td>
            <td>
              {{user.pays}}</td>
          </tr>
          <tr>
            <td>Nationalité</td>
            <td>
              {{user.nationalite}}</td>
          </tr>
          <tr>
            <td>Ville</td>
            <td>
              {{user.ville}}</td>
          </tr>
          <tr>
            <td>Adresse</td>
            <td>
              {{user.adressedomicile}}</td>
          </tr>
          <tr>
            <td>Code Postal</td>
            <td>
              {{user.codepostal}}</td>
          </tr>
          <tr>
            <td>Telephone Mobile</td>
            <td>
              {{user.telmobile}}</td>
          </tr>
          <tr>
            <td>Telephone Domicile</td>
            <td>
              {{user.teldomicile}}
              {% if user.teldomicile==""%}
                N/D
              {% endif %}
            </td>
          </tr>
        </table>
      </center>
    </br>
    <a class="lien" href="/deleteuser/{{user.id}}" style="width:85%">Supprimer</a>

  </div>
</div>

{% endblock %}